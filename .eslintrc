{
	"env": {
		"vue/setup-compiler-macros": true
	},
	"plugins": ["prettier"],
	"extends": ["@nuxtjs/eslint-config-typescript", "plugin:nuxt/recommended", "prettier"],
	"rules": {
		"vue/multi-word-component-names": [
			"error",
			{
				"ignores": ["Footer", "Logo"]
			}
		],
		"vue/script-indent": [
			"error",
			"tab",
			{
				"baseIndent": 1,
				"switchCase": 1
			}
		]
	}
}
